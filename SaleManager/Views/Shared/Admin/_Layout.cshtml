    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/font-awesome/js/solid.js"></script>
    <script src="~/lib/font-awesome/js/fontawesome.js"></script>
    <script src="~/lib/datatable/js/datatable.js"></script>       

    @{
        var controller = ViewContext.RouteData.Values["Controller"];
        var action = ViewContext.RouteData.Values["Action"];
    }
    <head>
        <link href="@Url.Content("~/css/admin/"+ controller +"/"+ action +".css")" rel="stylesheet" type="text/css" />
        <script type="text/javascript" src="@Url.Content("/js/admin/"+ controller +"/"+ action +".js")"></script>
        @RenderSection("Styles", false)
        @RenderSection("JavaScript", required: false)
    </head>

    @RenderSection("Scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
</body>

</html>