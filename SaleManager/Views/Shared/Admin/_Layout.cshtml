<!DOCTYPE html>
<html>
@{
    var controller = ViewContext.RouteData.Values["Controller"];
    var action = ViewContext.RouteData.Values["Action"];
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">

    <title>@ViewData["Title"] - SaleManager</title>

    <script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>

    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap CSS -->
    <!-- Font Awesome JS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <!-- Font Awesome JS -->
    <!-- DataTable JS -->
    <link href="https://nightly.datatables.net/css/jquery.dataTables.css" rel="stylesheet" type="text/css" />
    <script src="https://nightly.datatables.net/js/jquery.dataTables.js"></script>
    <!-- DataTable JS -->
    <!-- Our Custom CSS -->
    <link rel="stylesheet" href="~/css/style4.css">
    <link rel="stylesheet" href="~/css/wickedcss.min.css">
    
    <script type="text/javascript" src="@Url.Content("~/js/admin/admin.js")"></script>

    <link href="@Url.Content("~/css/admin/"+ controller.ToString().ToLower() +"/"+ action.ToString().ToLower() +".css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="@Url.Content("/js/admin/"+ controller.ToString().ToLower() +"/"+ action.ToString().ToLower() +".js")"></script>
    @RenderSection("Styles", false)
    @RenderSection("JavaScript", required: false)
</head>

<body>

    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Sale manager</h3>
                <strong>BS</strong>
            </div>

            <ul class="list-unstyled components">
                <li class="active">
                    <a href="/admin/product">
                        <i class="fas fa-box"></i>
                        Sản phẩm
                    </a>
                </li>
                <li>
                    <a data-bs-toggle="collapse" href="#repayment" data-bs-target="#repayment" role="button" aria-expanded="false" aria-controls="repayment" class="dropdown-toggle" data-toggle="collapse">
                        <i class="fas fa-hand-holding-usd"></i>
                        Nợ
                    </a>
                    <div class="collapse" id="repayment">
                        <ul class="collapse list-unstyled">
                            <li>
                                <a href="/admin/repayment/customer">Khách nợ</a>
                            </li>
                            <li>
                                <a href="/admin/repayment/supplier">Nợ nhập hàng</a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li>
                    <a href="/admin/transaction">
                        <i class="fas fa-transporter-empty"></i>
                        Giao dịch
                    </a>
                </li>
            </ul>
            <ul class="list-unstyled components">
                <li>
                    <a href="/admin/customer">
                        <i class="fas fa-users"></i>
                        Khách hàng
                    </a>
                </li>
                <li>
                    <a href="/admin/supplier">
                        <i class="fas fa-people-carry"></i>
                        Nhà cung cấp
                    </a>
                </li>
                <li>
                    <a href="/admin/category">
                        <i class="fas fa-list"></i>
                        Danh mục
                    </a>
                </li>
                <li>
                    <a href="/admin/unit">
                        <i class="fas fa-puzzle-piece"></i>
                        Đơn vị
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content  -->
        <div id="content">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-align-left"></i>
                        <span>Toggle Sidebar</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Logout</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Page</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Page</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div id="liveAlert"></div>
            @RenderBody()

        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>

</html>