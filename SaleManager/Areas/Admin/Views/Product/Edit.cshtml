@model SaleManager.Models.Product

@{
    ViewData["Title"] = "Sửa sản phẩm";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-10 col-sm-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Barcode" class="control-label"></label>
                <input asp-for="Barcode" class="form-control" />
                <span asp-validation-for="Barcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="row g3">
                <div class="form-group col-md-6">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="UnitId" class="control-label"></label>
                    <select asp-for="UnitId" class="form-control" asp-items="ViewBag.UnitId"></select>
                    <span asp-validation-for="UnitId" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row g3">
                <div class="form-group col-md-6">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PriceBuy" class="control-label"></label>
                    <input asp-for="PriceBuy" class="form-control" />
                    <span asp-validation-for="PriceBuy" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row g3">
                <div class="form-group col-md-6">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="SupplierId" class="control-label"></label>
                    <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>
            </div>

            <div class="row g3">
                <div class="form-group col-md-6">
                    <label asp-for="ExpirationDate" class="control-label"></label>
                    <input asp-for="ExpirationDate" class="form-control" />
                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="ExpRange" class="control-label"></label>
                    <div class="input-group mb-3">
                      <input asp-for="ExpRange" class="form-control" />
                      <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Dropdown</button>
                      <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Action</a></li>
                        <li><a class="dropdown-item" href="#">Another action</a></li>
                        <li><a class="dropdown-item" href="#">Something else here</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Separated link</a></li>
                      </ul>
                    </div>
                    <span asp-validation-for="ExpRange" class="text-danger"></span>
                </div>
            </div>

            <div class="row g3">
                <div class="form-group form-check col-md-6">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Pin" /> @Html.DisplayNameFor(model => model.Pin)
                    </label>
                </div>
                <div class="form-group form-check col-md-6">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Disable" /> @Html.DisplayNameFor(model => model.Disable)
                    </label>
                </div>
            </div>

            <div>
              <label asp-for="ImageUrl" for="formFile" class="form-label"></label>
              <input asp-for="ImageUrl" class="form-control" type="file" id="formFile" name = "formFile">
              <span asp-validation-for="ImageUrl" class="text-danger"></span>
              <input type="hidden" asp-for="ImageUrl" />
            </div>
            <div class="form-group mb-3">
                @{
                    if (string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img class="image-size" src="@Url.Content("~/image/no-image-icon.png")" />
                    }
                    else
                    {
                        <img class="image-size" src="@Url.Content("~/" + Model.ImageUrl)" />
                    }
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
